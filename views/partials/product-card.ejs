<div class="product-card">
    <a href="/products/<%= product.slug %>">
        <div class="product-image">
            <% if (product.sale_type) { %>
                <span class="product-badge sale-badge">
                    <% if (product.sale_type === 'percentage') { %>
                        -<%= product.sale_value %>%
                    <% } else if (product.sale_type === 'fixed') { %>
                        -<%= product.sale_value.toLocaleString('vi-VN') %>đ
                    <% } %>
                </span>
            <% } %>
            
            <% if (product.stock_quantity === 0) { %>
                <span class="product-badge out-of-stock">Hết hàng</span>
            <% } else if (product.created_at && new Date() - new Date(product.created_at) < 7 * 24 * 60 * 60 * 1000) { %>
                <span class="product-badge new-badge">Mới</span>
            <% } %>
            
            <img src="<%= product.primary_image || '/images/default-product.jpg' %>" alt="<%= product.name %>">
            
            <button class="quick-add-btn" onclick="addToCart(event, <%= product.id %>)">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M3 1a1 1 0 000 2h1.22l.305 1.222a.997.997 0 00.01.042l1.358 5.43-.893.892C3.74 11.846 4.632 14 6.414 14H15a1 1 0 000-2H6.414l1-1H14a1 1 0 00.894-.553l3-6A1 1 0 0017 3H6.28l-.31-1.243A1 1 0 005 1H3zM16 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM6.5 18a1.5 1.5 0 100-3 1.5 1.5 0 000 3z"/>
                </svg>
                Thêm vào giỏ
            </button>
        </div>
        
        <div class="product-info">
            <h3 class="product-name"><%= product.name %></h3>
            
            <% if (product.average_rating > 0) { %>
                <div class="product-rating">
                    <span class="stars">★</span>
                    <span><%= product.average_rating.toFixed(1) %></span>
                    <span class="review-count">(<%= product.review_count %>)</span>
                </div>
            <% } %>
            
            <div class="product-price">
                <% if (product.final_price < product.price) { %>
                    <span class="price-original"><%= product.price.toLocaleString('vi-VN') %>đ</span>
                    <span class="price-sale"><%= product.final_price.toLocaleString('vi-VN') %>đ</span>
                <% } else { %>
                    <span class="price-current"><%= product.price.toLocaleString('vi-VN') %>đ</span>
                <% } %>
            </div>
            
            <% if (product.variants && product.variants.length > 0) { %>
                <div class="product-colors">
                    <% const uniqueColors = [...new Set(product.variants.map(v => v.color))].slice(0, 5); %>
                    <% uniqueColors.forEach(color => { %>
                        <span class="color-dot" style="background-color: <%= color %>"></span>
                    <% }) %>
                </div>
            <% } %>
        </div>
    </a>
</div>
