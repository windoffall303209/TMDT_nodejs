<script>
// Admin Mobile Menu
document.addEventListener('DOMContentLoaded', function() {
    const adminMobileMenuBtn = document.getElementById('adminMobileMenuBtn');
    const adminMobileNav = document.getElementById('adminMobileNav');
    const adminMobileOverlay = document.getElementById('adminMobileOverlay');

    if (!adminMobileMenuBtn || !adminMobileNav) return;

    function toggleAdminMenu() {
        adminMobileMenuBtn.classList.toggle('active');
        adminMobileNav.classList.toggle('active');
        adminMobileOverlay.classList.toggle('active');
        document.body.classList.toggle('admin-menu-open');
    }

    function closeAdminMenu() {
        adminMobileMenuBtn.classList.remove('active');
        adminMobileNav.classList.remove('active');
        adminMobileOverlay.classList.remove('active');
        document.body.classList.remove('admin-menu-open');
    }

    adminMobileMenuBtn.addEventListener('click', toggleAdminMenu);
    adminMobileOverlay.addEventListener('click', closeAdminMenu);

    // Close on escape
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') closeAdminMenu();
    });

    // Close on window resize to desktop
    window.addEventListener('resize', function() {
        if (window.innerWidth > 1024) closeAdminMenu();
    });
});
</script>
