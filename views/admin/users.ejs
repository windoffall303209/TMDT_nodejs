<%- include('../partials/admin-header', { currentPage: 'users' }) %>

<div class="admin-page">
    <div class="container">
        <!-- Page Header -->
        <div class="admin-page-header">
            <div class="admin-page-header__left">
                <h1>Quản Lý Người Dùng</h1>
                <p><%= users ? users.length : 0 %> người dùng</p>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="stats-grid">
            <div class="stat-card stat-card--blue">
                <h3 class="stat-card__label">Tổng người dùng</h3>
                <p class="stat-card__value"><%= users ? users.length : 0 %></p>
            </div>
            <div class="stat-card stat-card--purple">
                <h3 class="stat-card__label">Admin</h3>
                <p class="stat-card__value"><%= users ? users.filter(u => u.role === 'admin').length : 0 %></p>
            </div>
            <div class="stat-card stat-card--green">
                <h3 class="stat-card__label">Đang hoạt động</h3>
                <p class="stat-card__value"><%= users ? users.filter(u => u.is_active).length : 0 %></p>
            </div>
            <div class="stat-card stat-card--pink">
                <h3 class="stat-card__label">Bị khóa</h3>
                <p class="stat-card__value"><%= users ? users.filter(u => !u.is_active).length : 0 %></p>
            </div>
        </div>

        <!-- Users Table -->
        <% if (users && users.length > 0) { %>
            <div class="admin-table-wrapper">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Người Dùng</th>
                            <th>Email</th>
                            <th class="text-center">Vai Trò</th>
                            <th class="text-center">Trạng Thái</th>
                            <th class="text-center">Ngày Tạo</th>
                            <th class="text-center">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(u => { %>
                            <tr>
                                <td><%= u.id %></td>
                                <td>
                                    <div class="user-info">
                                        <div class="user-info__avatar">
                                            <%= u.full_name ? u.full_name.charAt(0).toUpperCase() : 'U' %>
                                        </div>
                                        <div class="user-info__details">
                                            <span class="user-info__name"><%= u.full_name || 'Chưa đặt tên' %></span>
                                            <% if (u.phone) { %>
                                                <span class="user-info__phone"><%= u.phone %></span>
                                            <% } %>
                                        </div>
                                    </div>
                                </td>
                                <td><%= u.email %></td>
                                <td class="text-center">
                                    <% if (u.role === 'admin') { %>
                                        <span class="admin-table__badge admin-table__badge--processing">Admin</span>
                                    <% } else { %>
                                        <span class="admin-table__badge admin-table__badge--secondary">Khách hàng</span>
                                    <% } %>
                                </td>
                                <td class="text-center">
                                    <% const isActive = Boolean(u.is_active); %>
                                    <% if (isActive) { %>
                                        <span class="admin-table__badge admin-table__badge--delivered">Hoạt động</span>
                                    <% } else { %>
                                        <span class="admin-table__badge admin-table__badge--cancelled">Bị khóa</span>
                                    <% } %>
                                </td>
                                <td class="text-center">
                                    <span class="user-date"><%= new Date(u.created_at).toLocaleDateString('vi-VN') %></span>
                                </td>
                                <td class="text-center">
                                    <% if (u.role !== 'admin') { %>
                                        <div class="admin-actions-group">
                                            <button onclick="viewUser(<%= u.id %>)" class="admin-btn admin-btn--edit" title="Xem chi tiết">
                                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                                                    <circle cx="12" cy="12" r="3"/>
                                                </svg>
                                            </button>
                                            <button onclick="toggleUserStatus('<%= u.id %>', <%= isActive %>)" class="admin-btn <%= isActive ? 'admin-btn--delete' : 'admin-btn--image' %>" title="<%= isActive ? 'Khóa tài khoản' : 'Mở khóa' %>">
                                                <% if (isActive) { %>
                                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                                                        <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
                                                    </svg>
                                                <% } else { %>
                                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                                                        <path d="M7 11V7a5 5 0 0 1 9.9-1"/>
                                                    </svg>
                                                <% } %>
                                            </button>
                                        </div>
                                    <% } else { %>
                                        <span class="user-admin-badge">
                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                                            </svg>
                                        </span>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="admin-empty">
                <div class="admin-empty__icon">
                    <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                        <circle cx="9" cy="7" r="4"/>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                    </svg>
                </div>
                <h3 class="admin-empty__title">Chưa có người dùng nào</h3>
                <p class="admin-empty__text">Người dùng mới sẽ xuất hiện tại đây khi đăng ký.</p>
            </div>
        <% } %>
    </div>
</div>

<!-- Toast Container -->
<div id="toastContainer"></div>

<!-- Confirm Modal -->
<div id="confirmModal">
    <div class="confirm-modal__content">
        <div class="confirm-modal__icon" id="confirmIcon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
            </svg>
        </div>
        <div class="confirm-modal__text">
            <h3 id="confirmTitle">Xác nhận</h3>
            <p id="confirmMessage">Bạn có chắc muốn thực hiện?</p>
        </div>
        <div class="confirm-modal__buttons">
            <button id="confirmNo" class="admin-btn admin-btn--ghost">Hủy</button>
            <button id="confirmYes" class="admin-btn admin-btn--danger">Xác nhận</button>
        </div>
    </div>
</div>

<style>
/* Page Header */
.admin-page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 32px;
}

.admin-page-header__left h1 {
    font-size: 28px;
    font-weight: 700;
    color: var(--admin-text-primary);
    margin: 0 0 4px 0;
}

.admin-page-header__left p {
    font-size: 14px;
    color: var(--admin-text-secondary);
    margin: 0;
}

/* User Info */
.user-info {
    display: flex;
    align-items: center;
    gap: 12px;
}

.user-info__avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--admin-accent);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 16px;
}

.user-info__details {
    display: flex;
    flex-direction: column;
    gap: 2px;
}

.user-info__name {
    font-weight: 500;
    color: var(--admin-text-primary);
}

.user-info__phone {
    font-size: 12px;
    color: var(--admin-text-secondary);
}

/* User Date */
.user-date {
    font-size: 13px;
    color: var(--admin-text-secondary);
}

/* User Admin Badge */
.user-admin-badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: rgba(59, 130, 246, 0.1);
    color: var(--admin-accent);
    border-radius: 6px;
}

/* Secondary Badge */
.admin-table__badge--secondary {
    background: var(--admin-bg);
    color: var(--admin-text-secondary);
}

/* Actions Group */
.admin-actions-group {
    display: flex;
    gap: 8px;
    justify-content: center;
}

/* Confirm Modal Icon */
.confirm-modal__icon {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 20px;
    background: rgba(239, 68, 68, 0.1);
    color: var(--admin-danger);
}

.confirm-modal__icon--success {
    background: rgba(16, 185, 129, 0.1);
    color: var(--admin-success);
}

.confirm-modal__text {
    text-align: center;
    margin-bottom: 24px;
}

.confirm-modal__text h3 {
    font-size: 18px;
    font-weight: 600;
    margin: 0 0 8px 0;
    color: var(--admin-text-primary);
}

.confirm-modal__text p {
    font-size: 14px;
    color: var(--admin-text-secondary);
    margin: 0;
}

/* Admin Button Ghost */
.admin-btn--ghost {
    background: transparent;
    color: var(--admin-text-secondary);
    border: 1px solid var(--admin-border);
}

.admin-btn--ghost:hover {
    background: var(--admin-bg);
    color: var(--admin-text-primary);
}
</style>

<script src="/js/admin/users.js"></script>

<%- include('../partials/admin-footer') %>
